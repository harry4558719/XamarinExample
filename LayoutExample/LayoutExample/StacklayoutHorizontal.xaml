            </StackLayout>
            <StackLayout HorizontalOptions="CenterAndExpand" Spacing="30" Orientation="Horizontal">
                <StackLayout>
                    <Button Text="按鈕五" FontSize="32" BorderWidth="0" />
                </StackLayout>
                <StackLayout>
                    <Button Text="按鈕六" FontSize="32" BorderWidth="0" />
                </StackLayout>
           </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
